<form action="/login" method="POST" id="form">
  <h2>Login</h2>

  <div class="form-group">
    <input class="form-control" type="text" name="username" placeholder="insert your username">
  </div>

  <div class="form-group">
    <input class="form-control" type="password" name="password" placeholder="insert your password">
  </div>

  {{#if errorMessage }}
    <div class="alert alert-danger">{{ errorMessage }}</div>
  {{/if}}

  <div class="form-group">
    <button class="btn btn-primary btn-block">Sign in</button>
  </div>

  <p><a href="/auth/facebook">Login with Facebook</a></p>

</form>