  <div class="jumbotron">
    <h1 class="display-4">{{ title }}</h1>
    <p class="lead">user deletion</p>
    <hr class="my-4">
    <p>Are you sure that you want to delete {{ user.name }}?</p>
    {{#if message}}
      <div class="alert alert-danger">{{ message }}</div>
    {{/if}}
    <form action="/users/delete" method="POST">
      <input type="hidden" name="id" value="{{user._id}}">
      <button class="btn btn-primary btn-lg" role="button">Yes!</button>
    </form>

  </div>
</div>