<div class="container-fluid">
    <p>Hey, {{ currentUser.name }} {{#if currentUser.isBoss}} | <a href="/users/add">add user</a> {{/if}}| <a href="/logout">logout</a></p>

    <hr class="my-4" />

    <h1>users</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <td>
                        <a href="/user/{{_id}}">{{name}}</a>
                    </td>
                    <td>
                        {{#if owned}}
                            <a href="/users/edit?user_id={{_id}}" class="btn btn-primary btn-sm">Edit</a>
                        {{/if}}

                        {{#if ../currentUser.isBoss}}
                            <a href="/users/delete/{{_id}}" class="btn btn-primary btn-sm">Delete</a>
                        {{/if}}
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>