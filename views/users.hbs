<div class="container-fluid">
    <h1>users</h1>

    {{#if currentUser.isBoss}}
        <p>
            <a href="/users/add" class="btn btn-primary btn-sm">add user</a>
        </p>
    {{/if}}

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <td>
                        <a href="/user/{{_id}}">
                            {{name}}<br />
                            <span class="badge badge-secondary">{{role}}</span>
                        </a>
                    </td>
                    <td>
                        {{#if owned}}
                            <a href="/users/edit/{{_id}}" class="btn btn-primary btn-sm">Edit</a>
                        {{/if}}

                        {{#if ../currentUser.isBoss}}
                            <a href="/users/delete/{{_id}}" class="btn btn-primary btn-sm">Delete</a>
                        {{/if}}
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
